<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
@if (Model != null && Model.Any())
{
    <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-header bg-primary text-white">
            <h4>Students Details</h4>
        </div>
        <div class="card-body">
            <h5 class="mb-3">📚 Students Securing 100 Marks</h5>
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>                 
                        <th>Subject</th>
                        <th>Marks</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var studentName in Model)
                    {
                        <tr class="table-info"><td colspan="4"><strong>@string.Format($"{studentName.FirstOrDefault(x => x.RollNumber == studentName.Key).Name} ({studentName.Key})")</strong></td></tr>
                        @foreach (var student in studentName)
                        {
                            <tr>
                                <td>@string.Format($"{student.SubjectName}({student.SubjectCode})")</td>
                                <td>@student.Marks</td>                               
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

