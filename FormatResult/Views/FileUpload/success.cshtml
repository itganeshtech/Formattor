@model FormatModals.FileUploadViewModel
@{
    ViewData["Title"] = "Upload Successful";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-success"> Uploaded Successfully!</h2>
        <p>File Name: <strong>@Model.FileName</strong></p>
        <p>School Name: <strong>@Model.SchoolResult.SchoolName</strong></p>
        <p>Total Number of Students Enrolled: <strong>@Model.SchoolResult.Students.Count</strong></p>

        <div class="mt-4">
            <!-- Button 1: Upload Another File -->
            <a href="javascript:void(0);" id="btnToppers" class="btn btn-primary me-2">First Three Toppers</a>

            <!-- Button 2: Download Result as Excel -->
            <a href="" class="btn btn-success me-2">Percentage wise count</a>

            <!-- Button 3: View Summary -->
            <a href="" class="btn btn-info me-2">Subject wise topers</a>            
        </div>
    </div>
</div>


<div class="container mt-5" id="resultview"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnToppers").click(function () {
            $.ajax({
                url: '@Url.Action("GetFirstThreeToppers", "FileUpload")',
                type: 'GET',
                success: function (data) {
                    $("#resultview").html(data);
                },
                error: function () {
                    $("#resultview").html('<p class="text-danger">Error loading data.</p>');
                }
            });
        });
    });
</script>