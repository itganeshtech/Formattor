@model FormatResult.Models.FirstToppersViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="card shadow-lg p-3 mb-5 bg-white rounded">
    <div class="card-header bg-primary text-white">
        <h4>🎖️Top Performing Students</h4>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-6">
                <h5 class="text-primary">🏫 List Of Students Under Top Three Percent</h5>
                <p><strong>Total Students Listed:</strong> @Model.FirstToppersViewModelDetails.Count</p>
            </div>
            <div class="col-md-6">
                <div class="alert alert-secondary">
                    <h5 class="mb-2">📊 Top Three Percentage</h5>
                    <p class="mb-1"><strong>First Highest: @Model.Percentages[0] </strong> </p>
                    <p class="mb-1"><strong>Second Highest: @Model.Percentages[1] </strong> </p>
                    <p class="mb-1"><strong>Third Highest: @Model.Percentages[2]</strong> </p>
                </div>
            </div>
        </div>

        <div class="mb-4">
            <h5 class="border-bottom pb-2">🎯 Top Performers</h5>
            @if (Model != null)
            {
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>S.No</th>
                            <th>Roll Number</th>
                            <th>Name</th>
                            
                            <th>Percentage</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int counter = 1;
                        }
                        @foreach (var student in Model.FirstToppersViewModelDetails)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@student.RollNumber</td>
                                <td>@student.Name</td>
                                
                                <td>@student.Percentage.ToString("0.00")%</td>
                                
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-danger">No student data available.</p>
            }
        </div>

        <!-- Performance Metrics Cards -->
        <div class="row">
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

}