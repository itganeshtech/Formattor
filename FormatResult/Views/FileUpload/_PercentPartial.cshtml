@model List<FormatModals.Student>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

@if (Model != null && Model.Any())
{
    <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-header bg-primary text-white">
            <h4>Students Details</h4>
        </div>
        <div class="card-body">
            <h5 class="mb-3">📚 All Students Information</h5>
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Roll Number</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Overall Result</th>
                        <th>Percentage</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.RollNumber</td>
                            <td>@student.Name</td>
                            <td>@student.Gender</td>
                            <td>@student.OverallResult</td>
                            <td>@student.Percentage.ToString("0.00")%</td>
                            <td>
                                @* <button class="btn btn-info btn-sm" data-toggle="collapse" data-target="#details-@student.RollNumber">View Subjects</button> *@
                                <button class="btn btn-info btn-sm" data-bs-toggle="collapse" data-bs-target="#details-@student.RollNumber">View Subjects</button>

                            </td>
                        </tr>
                        <tr id="details-@student.RollNumber" class="collapse">
                            <td colspan="6">
                                @if (student.Subjects != null && student.Subjects.Any())
                                {
                                    <table class="table table-bordered mt-2">
                                        <thead class="bg-light">
                                            <tr>
                                                <th>Subject Code</th>
                                                <th>Subject Name</th>
                                                <th>Marks</th>
                                                <th>Grade</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var subject in student.Subjects)
                                            {
                                                <tr>
                                                    <td>@subject.Key</td>
                                                    <td>@subject.Value.SubjectName</td>
                                                    <td>@subject.Value.Marks</td>
                                                    <td>@subject.Value.Grade</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p class="text-danger">No subject details found.</p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p class="text-danger">No student data available.</p>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    
}

















